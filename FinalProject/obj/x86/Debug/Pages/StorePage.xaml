<Page x:ConnectionId='1'
    x:Class="FinalProject.Pages.StorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProject.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     
    Background="LightBlue">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="13" Grid.Column="3" Grid.ColumnSpan="2">
            <Button x:ConnectionId='12' x:Name="backButton" BorderThickness="2" BorderBrush="White" CornerRadius="20" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="back" FontSize="20"                         ></Button>
        </Viewbox>
        <Viewbox Grid.Row="13" Grid.Column="4" Grid.ColumnSpan="2"/>

        <Viewbox Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <TextBlock Text="STORE PAGE" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="0" Grid.Column="0">
            <TextBlock Text="Coins: " FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="0" Grid.Column="1">
            <TextBlock x:ConnectionId='11' x:Name="coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>
        
        
        
        
        
        
        
        
        
        
        <Viewbox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" >
            <TextBlock Text="Background image:" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2">
            <Image Source="ms-appx:///Assets/pic/bg/background1.jpg"></Image>
        </Viewbox>
        <Viewbox Grid.Column="2" Grid.Row="3">
            <Button x:ConnectionId='10' x:Name="buyBackground1" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="buy"
                    FontSize="20"                             ></Button>
        </Viewbox>
        <Viewbox Grid.Column="3" Grid.Row="3">
            <TextBlock Text="200 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="2">
            <Image Source="ms-appx:///Assets/pic/bg/background2.jpg"></Image>
        </Viewbox>
        <Viewbox Grid.Column="4" Grid.Row="3">
            <Button x:ConnectionId='9' x:Name="buyBackground2" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="buy"
                    FontSize="20"                             ></Button>
        </Viewbox>
        <Viewbox Grid.Column="5" Grid.Row="3">
            <TextBlock Text="250 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="2">
            <Image Source="ms-appx:///Assets/pic/bg/background3.jpg"></Image>
        </Viewbox>
        <Viewbox Grid.Column="6" Grid.Row="3">
            <Button x:ConnectionId='8' x:Name="buyBackground3" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="buy"
                    FontSize="20"                             ></Button>
        </Viewbox>
        <Viewbox Grid.Column="7" Grid.Row="3">
            <TextBlock Text="300 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>
        
        



        
        
        
        
        
        
        
        


        <Viewbox Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" >
            <TextBlock Text="Food Type:" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="6">
            <Image Source="ms-appx:///Assets/pic/food/banana.png"></Image>
        </Viewbox>
        <Viewbox Grid.Column="2" Grid.Row="7">
            <Button x:ConnectionId='7' x:Name="buyBanana" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="buy"
                    FontSize="20"                        ></Button>
        </Viewbox>
        <Viewbox Grid.Column="3" Grid.Row="7">
            <TextBlock Text="200 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="6">
            <Image Source="ms-appx:///Assets/pic/food/cherry.png"></Image>
        </Viewbox>
        <Viewbox Grid.Column="4" Grid.Row="7">
            <Button x:ConnectionId='6' x:Name="buyCherry" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="buy"
                    FontSize="20"                        ></Button>
        </Viewbox>
        <Viewbox Grid.Column="5" Grid.Row="7">
            <TextBlock Text="250 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="6">
            <Image Source="ms-appx:///Assets/pic/food/strawberry.png"></Image>
        </Viewbox>
        <Viewbox Grid.Column="6" Grid.Row="7">
            <Button x:ConnectionId='5' x:Name="buyStrawberry" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                    Content="buy" FontSize="20"                            ></Button>
        </Viewbox>
        <Viewbox Grid.Column="7" Grid.Row="7">
            <TextBlock Text="300 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        <Viewbox Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="2" >
            <TextBlock Text="Snake Color:" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="10">
            <Image Source="ms-appx:///Assets/pic/head/pinkHead/pinkHeadUp.png"></Image>
        </Viewbox>
        <Viewbox Grid.Column="2" Grid.Row="11">
            <Button x:ConnectionId='4' x:Name="buyPinkHead" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                    Content="buy" FontSize="20"                          ></Button>
        </Viewbox>
        <Viewbox Grid.Column="3" Grid.Row="11">
            <TextBlock Text="200 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="10">
            <Image Source="ms-appx:///Assets/pic/head/yellowHead/yellowHeadUp.png"></Image>
        </Viewbox>
        <Viewbox Grid.Column="4" Grid.Row="11">
            <Button x:ConnectionId='3' x:Name="buyYellowHead" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                    Content="buy" FontSize="20"                            ></Button>
        </Viewbox>
        <Viewbox Grid.Column="5" Grid.Row="11">
            <TextBlock Text="250 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>



        <Viewbox Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="10">
            <Image Source="ms-appx:///Assets/pic/head/blueHead/blueHeadUp.png"></Image>
        </Viewbox>
        <Viewbox Grid.Column="6" Grid.Row="11">
            <Button x:ConnectionId='2' x:Name="buyBlueHead" BorderThickness="2" BorderBrush="White" CornerRadius="20"
                    Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                    Content="buy" FontSize="20"                          ></Button>
        </Viewbox>
        <Viewbox Grid.Column="7" Grid.Row="11">
            <TextBlock Text="300 coins" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="30" ></TextBlock>
        </Viewbox>


    </Grid>
</Page>

